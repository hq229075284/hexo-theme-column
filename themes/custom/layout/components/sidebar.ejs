<side class="sidebar">
    <header class="">
        <div class="sidebar-title"><%-config.title-%></div>
        <div class="icons">
            <i class="iconfont icon-github"></i>
        </div>
    </header>

    <ul class="menus">
        <% for(let i=0;i<theme.menus.length;i++) { %>
            <li class="menu <%- ((path===site.HOME_HTML_PAGE_PATH&&i===0)||path.split('/')[0]===theme.menus[i].key)?'active':'' -%>" 
                title="<%-theme.menus[i].name-%>"
            >
            <a class="link">
                <i class="icon <%=theme.menus[i].icon%>"></i><span class="menu-name"><%=theme.menus[i].name%></span>
            </a>
            </li>  
        <%}%>
    </ul>
    
    <div class="avatar-container">
        <div class="avatar">
            <img class="inner" src="<%-url_for(theme.avatar)-%>" alt="">
        </div>
    </div>
</side>