$highLightColor=#3AB117
$normalColor=#C9CED1
$strongColor=#2E3F49
$borderColor=#F0F0F0

.app{
    display: flex;    
}
.sidebar
    overflow hidden
    flex: 0 0 18%;
    max-width 220px
    background-color: #fff
    border-right: 1px solid $borderColor;
    display: flex
    flex-direction: column

    header
        font-size: .2rem
        margin: 56px 0 30px
        flex-shrink: 0
        text-align: center
        .icons
            margin-top: 15px
            .iconfont
                cursor pointer
        .sidebar-title
            color:$highLightColor
            font-weight: 900
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
    .menus
            flex auto
            overflow-x hidden
            .menu
                cursor pointer
                height 40px
                line-height 40px
                border-left: 4px solid transparent
                padding-left: 10%
                color: $normalColor
                font-size: 14px
                display: flex
                > * 
                    vertical-align: middle
                &.active
                    background-color: #F9F9F9
                    border-left-color: $highLightColor
                .icon
                    margin-right: 20px
                    font-size: 20px
                .menu-name
                    flex: auto;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
            .menu + .menu
                margin-top: 8px    
        
    .avatar-container
            border-top:1px solid $borderColor
        .avatar
            width: 50%
            max-width: 80px
            border-radius: 50%
            overflow hidden
            position: relative
            border: 2px solid $borderColor
            margin: 10px auto
            &::before
                content:''
                display: block
                width: 100%
                padding-top: 100%
            .inner
                position: absolute
                top:0
                left 0
                width: 100%
                height: 100%
                object-fit: cover    

// 条件栏
.content-thumb
    max-width: 432px;
    flex: 0 0 28%;
    // flex: 0 0 432px
    min-width: 0
    border-right: 1px solid $borderColor;
    display: flex
    flex-direction: column
    .tabs
        // margin-top:25px
        border-bottom: 1px solid $borderColor;
        font-size: 0
        padding: 0 30px
        flex-shrink: 0
        white-space nowrap
        overflow hidden
        .tab
            padding: 10px 14px
            text-align: center
            font-size: 18px;
            font-weight: 400;
            color: $normalColor;
            display: inline-block;
            line-height: 30px
            cursor pointer
            border-bottom: 1px solid transparent
            &.active
                color:$highLightColor
                border-color: $highLightColor
    .list
        overflow-x: hidden
        flex auto
    .row
        padding: 20px .2rem 20px
        display: flex
        cursor pointer
        &.active,&:hover
            background-color: #F9F9F9
        .img-placeholder
            width: 25%
            padding-top: 25%
            border-radius: 4px
            background-position: center
            background-repeat: no-repeat
            background-size: cover
            flex:0 0 auto;
            align-self: flex-start
            margin-right: .3rem
        .thumb-info
            flex: auto
            .date
                color:$normalColor
                font-size: 10px
                font-weight: 400
            .title
                font-size: 16px
                color:$strongColor
            .brief
                color:darken($normalColor, 30%)
                font-size: 14px
                line-height: 22px;
                margin: 8px 0 8px
                overflow hidden
                max-height: 44px
                text-overflow: ellipsis
                display:-webkit-box; 
                -webkit-box-orient:vertical;
                -webkit-line-clamp:2; 
            .footer
                font-size: 12px
                color:$normalColor
                line-height: 14px
                font-weight: 400;
                display: flex
                justify-content: space-between
                .hl{
                    color:$highLightColor
                }

// 内容栏
.content
    padding: 0 .5rem
    flex:auto
    display: flex
    flex-direction: column
    overflow-x: hidden
    .widget
        padding: 0px 0 20px
        border-bottom: 1px solid $borderColor
        margin-top: 50px
        margin-bottom: 48px
        position relative
        min-height: 32px
        flex-shrink: 0
        .dropdown-button
            height:32px
            min-width: 84px
            padding: 0 12px
            position: absolute
            right 0
            top:50%
            margin-top: -26px
            font-size: 12px;
            font-weight: 400;
            color: #FFFFFF;
            border-radius: 16px;
            background-color: $highLightColor
            border:0

    .article
        flex:auto
        font-size: (18/100rem);